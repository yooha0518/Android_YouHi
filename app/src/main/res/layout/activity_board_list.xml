<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".friend.FriendSearchActivity"
        android:orientation="vertical"
        android:background="@drawable/background_gradient">

        <TextView
            android:id="@+id/BTN_toggle_friend_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="게시판"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/blue"
            android:background="@drawable/background_botton_radius"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/writeBtn"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/background_radius_blue"
            android:layout_gravity="right"
            android:text="글쓰기"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RV_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</layout>

